print("=== Bem-vindo ao Sistema Bancário JWC ===")

# Solicita nome do titular
nome = input("Digite o nome do titular da conta: ").strip()
titular = (nome,)  # Tupla com o nome

# Inicializa listas
saldo = []
historico = []

# Solicita depósito inicial (valor positivo)
valor = -1
while valor <= 0:
    entrada = input("Digite o valor do depósito inicial: R$ ")
    if entrada.replace('.', '', 1).isdigit():
        valor = float(entrada)
        if valor > 0:
            saldo.append(valor)
            historico.append("Depósito inicial: R$ {:.2f}".format(valor))
        else:
            print("Erro: O valor deve ser positivo.")
    else:
        print("Erro: Digite um número válido.")

# Menu de operações
opcao = ''
while opcao != '5':
    print("\n--- Menu de Operações ---")
    print("1. Depositar")
    print("2. Sacar")
    print("3. Consultar Saldo")
    print("4. Consultar Histórico")
    print("5. Sair")
    
    opcao = input("Escolha uma opção (1-5): ").strip()

    if opcao == '1':
        valor = -1
        while valor <= 0:
            entrada = input("Digite o valor para depositar: R$ ")
            if entrada.replace('.', '', 1).isdigit():
                valor = float(entrada)
                if valor > 0:
                    saldo[0] += valor
                    historico.append("Depósito: R$ {:.2f}".format(valor))
                    print("Depósito realizado com sucesso. Novo saldo: R$ {:.2f}".format(saldo[0]))
                else:
                    print("Erro: O valor deve ser positivo.")
            else:
                print("Erro: Digite um número válido.")

    elif opcao == '2':
        valor = -1
        while valor <= 0:
            entrada = input("Digite o valor para sacar: R$ ")
            if entrada.replace('.', '', 1).isdigit():
                valor = float(entrada)
                if valor > 0:
                    if valor <= saldo[0]:
                        saldo[0] -= valor
                        historico.append("Saque: R$ {:.2f}".format(valor))
                        print("Saque realizado com sucesso. Novo saldo: R$ {:.2f}".format(saldo[0]))
                    else:
                        print("Erro: Saldo insuficiente.")
                        break
                else:
                    print("Erro: O valor deve ser positivo.")
            else:
                print("Erro: Digite um número válido.")

    elif opcao == '3':
        print("Saldo atual: R$ {:.2f}".format(saldo[0]))

    elif opcao == '4':
        print("\n--- Histórico de Transações ---")
        if len(historico) > 0:
            for transacao in historico:
                print(transacao)
        else:
            print("Nenhuma transação realizada ainda.")

    elif opcao == '5':
        print("Obrigado por utilizar o sistema bancário JWC. Até a próxima!")
    else:
        print("Opção inválida. Por favor, escolha uma opção entre 1 e 5.")
