pratos = ["feijoada","macarrão","frango","peixe"]
import random #selecionar na lista coisas aleatórias
prato_secreto = random.choice (pratos) #choice é pq estou trabalhando com texto

tentativas = 5

controle = 1

print("")
print(50*"#")
print("Qual é o prato secreto da lista abaixo")
print(50*"#")
print("")
print(70*"#")
print("os pratos são: feijoada,macarrão,frango,peixe")
print(43*"#")

while controle <= tentativas: 
    print(f"Tentativa {controle} de {tentativas}")
    escolha = (imput("informe seu escolha"))
    print(f"Sua escolhar é : {escolha}")
    if (prato_secreto == escolha)
    print("Você acertou o Prato Secreto")
    else:
        print("Você não acertou")
    if(controle == 5):
        print(prato_secreto)
        print("Você perdeu")
    controle+=1

    print("Acabou o jogo")
